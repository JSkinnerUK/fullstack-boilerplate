{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "generate": "graphql-codegen --config ./codegen.ts",
    "start": "yarn build && node -r ts-node/register -r tsconfig-paths/register dist/src/index.js",
    "start:development": "yarn nodemon --exec yarn ts-node -r tsconfig-paths/register src/index.ts",
    "test": "yarn test:clean && yarn jest --passWithNoTests --detectOpenHandles --verbose",
    "test:clean": "yarn jest clean --passWithNoTests",
    "generate:graphql": "yarn workspace @project-backend/graphql run generate",
    "generate:prisma": "yarn workspace @project-backend/db run generate",
    "postinstall": "yarn generate:prisma",
    "build": "tsc --build && yarn copy",
    "copy": "yarn copyfiles -e dist/**/*.graphql **/*.graphql dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.3",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.6.4",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "nodemonConfig": {
    "ext": "js,ts,graphql",
    "ignore": [
      "tests/**/*.test.ts",
      "docs/*"
    ]
  },
  "workspaces": {
    "nohoist": [],
    "packages": [
      "./src/packages/*"
    ]
  }
}
